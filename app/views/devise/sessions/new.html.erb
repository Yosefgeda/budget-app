<div class="nav-bar">
  <%= link_to(root_path) do %>
    <i class="fa-solid fa-arrow-left"></i>
  <% end %> 
  <h2 class="log-in-header">Log in</h2>
  <p>Log in</>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "large-email-field", placeholder: "Enter your email" %>
  </div>

  <div class="field">
    
    <%= f.password_field :password, autocomplete: "current-password", class: "large-email-field", placeholder: "Enter your password" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class: "login-btn" %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="field">
    <div class="checkbox-wrapper">
      <%= f.check_box :remember_me, class: "checkbox-input" %>
      <%= f.label :remember_me, class: "checkbox-label" %>
    </div>
  </div>
  <% end %>

  
<% end %>

<%= render "devise/shared/links", class: "devise-links" %>
